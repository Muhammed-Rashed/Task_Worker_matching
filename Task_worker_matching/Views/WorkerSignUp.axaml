<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="https://github.com/avaloniaui"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Task_worker_matching.ViewModels"
             x:Class="Task_worker_matching.Views.WorkerSignUp"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600"
             x:DataType="vm:WorkerProfileViewModel">

  <Grid Background="#111827">
    <Grid.RowDefinitions>
      <RowDefinition Height="0.05*" />
      <RowDefinition Height="0.9*" />
      <RowDefinition Height="0.05*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="0.05*" />
      <ColumnDefinition Width="0.9*" />
      <ColumnDefinition Width="0.05*" />
    </Grid.ColumnDefinitions>

    <Border Grid.Row="1" Grid.Column="1"
            Background="#1f2937"
            CornerRadius="25"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />

    <Border Grid.Row="1" Grid.Column="1"
            Width="400"
            Height="650"
            Padding="20"
            Background="#111827"
            BorderBrush="#425f9e"
            BorderThickness="1"
            CornerRadius="12"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

      <StackPanel Spacing="10">
        <TextBlock Text="Worker Registration"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#2563eb"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="Personal Information"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,8,0,4"/>
        <TextBlock Text="Full Name" Foreground="White" FontSize="12"/>
        <TextBox Text="{Binding FullName, Mode=TwoWay}"
                 Background="#374151"
                 Foreground="White"
                 BorderBrush="Transparent"
                 Height="30"/>
        <TextBlock Text="Phone Number" Foreground="White" FontSize="12"/>
        <TextBox Text="{Binding PhoneNumber, Mode=TwoWay}"
                 Background="#374151"
                 Foreground="White"
                 BorderBrush="Transparent"
                 Height="30"/>
        <TextBlock Text="Email Address" Foreground="White" FontSize="12"/>
        <TextBox Text="{Binding Email, Mode=TwoWay}"
                 Background="#374151"
                 Foreground="White"
                 BorderBrush="Transparent"
                 Height="30"/>
        <TextBlock Text="Password" Foreground="White" FontSize="12"/>
        <TextBox Text="{Binding NewPassword, Mode=TwoWay}"
                 Background="#374151"
                 Foreground="White"
                 BorderBrush="Transparent"
                 Height="30"
                 PasswordChar="●"/>

        <TextBlock Text="Professional Details"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,12,0,4"/>
        <TextBlock Text="Specialties" Foreground="White" FontSize="12"/>
        <TextBox Text="{Binding Specialities[0], Mode=TwoWay}"
                 Background="#374151"
                 Foreground="White"
                 BorderBrush="Transparent"
                 Height="30"/>

        <TextBlock Text="Service Locations" Foreground="White" FontSize="12"/>
        <TextBox Text="{Binding ServiceLocations[0], Mode=TwoWay}"
                 Background="#374151"
                 Foreground="White"
                 BorderBrush="Transparent"
                 Height="30"/>

        <Button Content="Create account"
                Command="{Binding SaveProfileCommand}"
                Background="#2563eb"
                Foreground="White"
                FontWeight="Bold"
                Height="35"
                Margin="0,12,0,0"
                BorderBrush="Transparent"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0">
          <TextBlock Text="Already have an account? "
                     Foreground="LightGray"
                     FontSize="11"/>
          <Button Content="Sign in"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  Foreground="#2563eb"
                  FontSize="11"
                  Padding="0"
                  Cursor="Hand"/>
        </StackPanel>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
