<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Task_worker_matching.Views.ClientSignUp"
        Width="800" Height="600"
        Background="#111827">

  <Grid>
    <!-- 5% / 90% / 5% rows -->
    <Grid.RowDefinitions>
      <RowDefinition Height="0.05*" />
      <RowDefinition Height="0.9*" />
      <RowDefinition Height="0.05*" />
    </Grid.RowDefinitions>
    <!-- 5% / 90% / 5% columns -->
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="0.05*" />
      <ColumnDefinition Width="0.9*" />
      <ColumnDefinition Width="0.05*" />
    </Grid.ColumnDefinitions>

    <!-- 80%×80% backdrop -->
    <Border Grid.Row="1" Grid.Column="1"
            Background="#1f2937"
            CornerRadius="25"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />

    <!-- Client Registration form panel -->
    <Border Grid.Row="1" Grid.Column="1"
            Width="400"
            Padding="30"
            Background="#111827"
            BorderBrush="#425f9e"
            BorderThickness="1"
            CornerRadius="6"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
      
      <StackPanel Spacing="12">
        <!-- Title -->
        <TextBlock Text="Client Registration"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#2563eb"
                   HorizontalAlignment="Center"/>
        <TextBlock Text="Please fill in your information below"
                   FontSize="12"
                   Foreground="LightGray"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Full Name -->
        <TextBlock Text="Full Name" Foreground="White" FontSize="12"/>
        <TextBox Watermark="T Bag"
                 Background="#374151"
                 Foreground="White"
                 BorderThickness="0"
                 Height="30"/>

        <!-- Phone Number -->
        <TextBlock Text="Phone Number" Foreground="White" FontSize="12"/>
        <TextBox Watermark="01116746294"
                 Background="#374151"
                 Foreground="White"
                 BorderThickness="0"
                 Height="30"/>

        <!-- Email Address -->
        <TextBlock Text="Email Address" Foreground="White" FontSize="12"/>
        <TextBox Watermark="you@example.com"
                 Background="#374151"
                 Foreground="White"
                 BorderThickness="0"
                 Height="30"/>

        <!-- Password -->
        <TextBlock Text="Password" Foreground="White" FontSize="12"/>
        <TextBox Watermark="••••••••"
                 Background="#374151"
                 Foreground="White"
                 BorderThickness="0"
                 Height="30"
                 PasswordChar="•"/>

        <!-- Address -->
        <TextBlock Text="Address" Foreground="White" FontSize="12"/>
        <TextBox Background="#374151"
                 Foreground="White"
                 BorderThickness="0"
                 Height="30"/>

        <!-- Payment Information -->
        <TextBlock Text="Payment Information" Foreground="White" FontSize="12"/>
        <TextBox Watermark="Card number or PayPal ID"
                 Background="#374151"
                 Foreground="White"
                 BorderThickness="0"
                 Height="30"/>

        <!-- Create Account Button -->
        <Button Content="Create Account"
                Background="#2563eb"
                Foreground="White"
                FontWeight="Bold"
                Height="35"
                Margin="0,10,0,0"
                BorderBrush="Transparent"/>

        <!-- Already have an account? Sign in -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
          <TextBlock Text="Already have an account? "
                     Foreground="LightGray"
                     FontSize="11"/>
          <Button Content="Sign in"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  Foreground="#2563eb"
                  FontSize="11"
                  Padding="0"
                  Cursor="Hand"/>
        </StackPanel>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
