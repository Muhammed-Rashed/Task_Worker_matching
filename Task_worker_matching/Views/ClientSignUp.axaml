<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Task_worker_matching.Views.ClientSignUp"
             Width="1600" Height="820"
             Background="#111827">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="0.05*" />
      <RowDefinition Height="0.9*" />
      <RowDefinition Height="0.05*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="0.05*" />
      <ColumnDefinition Width="0.9*" />
      <ColumnDefinition Width="0.05*" />
    </Grid.ColumnDefinitions>

    <Border Grid.Row="1" Grid.Column="1"
            Background="#1f2937"
            CornerRadius="25"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />

    <Border Grid.Row="1" Grid.Column="1"
            Width="400"
            Height="680"
            Padding="20"
            Background="#111827"
            BorderBrush="#425f9e"
            BorderThickness="1"
            CornerRadius="12"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

      <StackPanel Spacing="10">
        <!-- Header -->
        <TextBlock Text="Client Registration"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#2563eb"
                   HorizontalAlignment="Center"/>
        <TextBlock Text="Please fill in your information below"
                   FontSize="14"
                   Foreground="LightGray"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,4"/>

        <!-- Personal Information -->
        <TextBlock Text="Personal Information"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,8,0,4"/>
        <TextBlock Text="Full Name" Foreground="White" FontSize="12"/>
        <TextBox Background="#374151"
                 Foreground="black"
                 BorderThickness="0"
                 Height="30"/>
        <TextBlock Text="Phone Number" Foreground="White" FontSize="12"/>
        <TextBox Background="#374151"
                 Foreground="black"
                 BorderThickness="0"
                 Height="30"/>
        <TextBlock Text="Email Address" Foreground="White" FontSize="12"/>
        <TextBox Background="#374151"
                 Foreground="black"
                 BorderThickness="0"
                 Height="30"/>
        <TextBlock Text="Password" Foreground="White" FontSize="12"/>
        <TextBox Background="#374151"
                 Foreground="black"
                 BorderThickness="0"
                 Height="30"
                 PasswordChar="â—"/>

        <!-- Additional Details -->
        <TextBlock Text="Additional Details"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="black"
                   Margin="0,12,0,4"/>
        <TextBlock Text="Address" Foreground="White" FontSize="12"/>
        <TextBox Background="#374151"
                 Foreground="black"
                 BorderThickness="0"
                 Height="30"/>
        <TextBlock Text="Payment Information" Foreground="White" FontSize="12"/>
        <TextBox Watermark="Card number or PayPal ID"
                 Background="#374151"
                 Foreground="black"
                 BorderThickness="0"
                 Height="30"/>

        <!-- Create Account -->
        <Button Content="Create Account"
                Background="#2563eb"
                Foreground="White"
                FontWeight="Bold"
                Height="35"
                Margin="0,12,0,0"
                BorderBrush="Transparent"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0">
          <TextBlock Text="Already have an account? "
                     Foreground="LightGray"
                     FontSize="11"/>
          <Button Content="Sign in"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  Foreground="#2563eb"
                  FontSize="11"
                  Padding="0"
                  Cursor="Hand"
                  Click="Login_Click"/>
        </StackPanel>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
